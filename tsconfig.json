{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"esModuleInterop": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
		"lib": ["ES2019"]
	}
}
