{
	"name": "backend-starter",
	"version": "0.0.1",
	"description": "",
	"author": "Chelsea Apps",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"jobs/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"dev": "npm run start:dev",
		"lint": "eslint \"{src,apps,libs,jobs}/**/*.ts\" --fix",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/migration.config.ts",
		"typeorm:migrate": "npm run typeorm migration:generate -- -n",
		"typeorm:run": "npm run typeorm migration:run",
		"db:sync": "npx mikro-orm schema:update --run",
		"test": "jest",
		"test:ci": "npm run test --  --maxWorkers=4",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e:docker": "npm run start:dependencies && DB_HOST=localhost DB_USER=postgres DB_PASSWORD=postgres REDIS_PORT=7000 npm run test:e2e && npm run stop:dependencies",
		"start:dependencies": "docker-compose -f docker-compose.e2e.yml up -d --remove-orphans --build",
		"stop:dependencies": "docker-compose -f docker-compose.e2e.yml down",
		"test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --runInBand --detectOpenHandles --forceExit",
		"docs": "npx @compodoc/compodoc -p tsconfig.json -s",
		"release": "standard-version --no-verify"
	},
	"dependencies": {
		"@chelseaapps/notification": "^1.10.1",
		"@mikro-orm/cli": "^4.5.10",
		"@mikro-orm/core": "^4.5.10",
		"@mikro-orm/mysql": "^4.5.10",
		"@mikro-orm/nestjs": "^4.3.1",
		"@nestjs/bull": "^0.3.1",
		"@nestjs/common": "^7.6.17",
		"@nestjs/config": "^0.5.0",
		"@nestjs/core": "^7.6.17",
		"@nestjs/graphql": "^7.10.6",
		"@nestjs/jwt": "^7.2.0",
		"@nestjs/passport": "^7.1.0",
		"@nestjs/platform-express": "^7.6.17",
		"@nestjs/schedule": "^0.4.2",
		"@nestjs/terminus": "^7.2.0",
		"@nestjs/testing": "^7.6.17",
		"@nestjs/typeorm": "^7.1.4",
		"apollo-server-express": "^2.24.1",
		"apollo-server-plugin-base": "^0.10.4",
		"aws-sdk": "^2.912.0",
		"bcrypt": "^5.0.0",
		"bull": "^3.22.6",
		"cache-manager": "^3.4.0",
		"cache-manager-redis-store": "^2.0.0",
		"class-transformer": "^0.3.1",
		"class-validator": "^0.12.2",
		"cookie-parser": "^1.4.5",
		"dd-trace": "^1.5.0",
		"express": "^4.17.1",
		"faker": "^5.1.0",
		"graphql": "^15.4.0",
		"graphql-query-complexity": "^0.7.2",
		"graphql-redis-subscriptions": "^2.4.0",
		"graphql-tools": "^7.0.5",
		"ioredis": "^4.27.3",
		"jsonwebtoken": "^8.5.1",
		"libphonenumber-js": "^1.9.18",
		"logform": "^2.3.0",
		"mjml": "^4.9.3",
		"mockdate": "^3.0.2",
		"ms": "^2.1.3",
		"mustache": "^4.0.1",
		"nest-winston": "^1.5.0",
		"nodemailer": "^6.6.1",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"pg": "^8.6.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.6.3",
		"typeorm": "^0.2.29",
		"uuid": "^8.3.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@nestjs/cli": "^7.5.1",
		"@nestjs/schematics": "^7.1.3",
		"@types/bcrypt": "^3.0.0",
		"@types/bull": "^3.15.1",
		"@types/cache-manager": "^2.10.3",
		"@types/cookie-parser": "^1.4.2",
		"@types/cron": "^1.7.2",
		"@types/express": "^4.17.8",
		"@types/faker": "^5.5.5",
		"@types/graphql-relay": "^0.6.0",
		"@types/jest": "^26.0.23",
		"@types/mjml": "^4.0.4",
		"@types/ms": "^0.7.31",
		"@types/mustache": "^4.0.1",
		"@types/node": "^14.17.0",
		"@types/nodemailer": "^6.4.0",
		"@types/passport-jwt": "^3.0.3",
		"@types/sanitize-html": "^1.27.0",
		"@types/supertest": "^2.0.10",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.27.0",
		"eslint-config-airbnb-typescript": "^12.0.0",
		"eslint-config-airbnb-typescript-prettier": "^3.1.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-import": "^2.23.3",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.3.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.1",
		"prettier": "^2.3.0",
		"standard-version": "^9.3.0",
		"supertest": "^6.0.0",
		"ts-jest": "^26.5.6",
		"ts-loader": "^8.3.0",
		"ts-node": "^9.0.0",
		"tsconfig-paths": "^3.9.0",
		"typedoc": "^0.19.2",
		"typescript": "^4.0.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run format",
			"npm run lint"
		]
	},
	"mikro-orm": {
		"useTsNode": true
	}
}
